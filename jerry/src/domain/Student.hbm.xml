<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
       "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
       "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
       <hibernate-mapping>
       
           <class      name="domain.Student"   table="student">
              <id  name="sid"    column="sid">
                               <generator  class="native"/>
              </id>
              <property name="sname"  column="sname"  length="20" ></property>   
              <property name="sex"  column="sex"  length="10" ></property>
              <property name="grade"  column="grade"  length="20" ></property>
              <property name="username"  column="username"  length="20" ></property>
              <property name="password"  column="password"  length="20"  ></property>
            <property name="sright" column="sright"  length="20"></property>
           </class>
                   
        
       
       </hibernate-mapping>